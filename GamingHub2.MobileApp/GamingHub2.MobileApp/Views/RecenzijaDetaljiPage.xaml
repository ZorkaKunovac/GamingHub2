    <ContentPage.BindingContext>
        <vm:RecenzijaDetaljiViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="DetaljiRecenzije"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <!--<ListView ItemsSource="{Binding recenzije}">-->
